{
  "private": true,
  "name": "ose",
  "version": "0.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && npm run build:js && npm run build:css",
    "build:js": "rollup -c",
    "build:css": "sass src/ose.scss dist/ose.css --style=compressed --source-map",
    "watch": "npm-run-all --parallel watch:*",
    "watch:js": "rollup -c --watch",
    "watch:css": "sass --watch src/ose.scss dist/ose.css --source-map",
    "typecheck": "tsc --noEmit",
    "link": "node ./tools/symlink.js",
    "unlink": "node ./tools/symlink.js -c",
    "lint": "biome check src",
    "format": "biome format --write src",
    "fix": "biome check --write src"
  },
  "author": "",
  "license": "",
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@league-of-foundry-developers/foundry-vtt-types": "github:League-of-Foundry-Developers/foundry-vtt-types#main",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/livereload": "^0.9.2",
    "fs-extra": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^4.55.1",
    "rollup-plugin-copy": "^3.5.0",
    "sass": "^1.97.2",
    "tslib": "^2.4.0",
    "typescript": "^5.9.3",
    "yargs": "^17.3.1"
  }
}
